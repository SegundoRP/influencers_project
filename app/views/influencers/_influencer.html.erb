<div id="influencer_<%= influencer.id %>" class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
  <div class="w-full h-48 overflow-hidden">
    <%= image_tag influencer.picture, alt: influencer.username, class: "w-full h-full object-cover" %>
  </div>

  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900"><%= influencer.username %></h3>
    <p class="text-sm text-gray-600"><%= influencer.fullname %></p>

    <div class="mt-4">
      <p class="text-sm text-gray-500">
        <span class="font-medium"><%= t("influencers.followers") %>:</span>
        <%= number_with_delimiter(influencer.followers) %>
      </p>
      <p class="text-sm text-gray-500">
        <span class="font-medium"><%= t("influencers.platform") %>:</span>
        <%= influencer.platform.capitalize %>
      </p>
      <p class="text-sm text-gray-500 flex items-center">
        <span class="font-medium mr-2"><%= t("influencers.is_verified") %>:</span>
        <%= image_tag influencer_is_verified(influencer), alt: t("influencers.is_verified_photo"), height: 12, width: 12 %>
      </p>
    </div>
  </div>
</div>
